#!/bin/bash
#keyboard layouts & shortcut
setxkbmap -layout us,latam;
setxkbmap -option 'grp:win_space_toggle';
#mouse sensitivity
xinput set-prop 'SYNA2B31:00 06CB:7F8B Touchpad' 'libinput Natural Scrolling Enabled' 1;
xinput set-prop 'pointer:Logitech Wireless Mouse MX Master 3' 'libinput Accel Speed' -0.80;
xinput set-prop 'SYNA2B31:00 06CB:7F8B Touchpad' 'libinput Tapping Enabled' 1;

numlockx on;

#startup programs
nextcloud --background;
xfce4-power-manager --daemon;
picom --experimental-backends -b;
copyq --start-server;

#wallpaper
wallpaperCount=$(ls ~/Pictures/ | grep Wallpaper | wc -l);
chosenWallpaper=$((1 + $RANDOM % $wallpaperCount));
feh --bg-fill /home/charly/Pictures/Wallpaper$chosenWallpaper.*;
